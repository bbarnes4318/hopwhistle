# ============================================================================
# Hopwhistle Worker - Environment Variables
# ============================================================================
# Copy this file to apps/worker/.env and customize for your environment

# ============================================================================
# Worker Configuration
# ============================================================================
NODE_ENV=development
WORKER_CONCURRENCY=5
METRICS_PORT=9091

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://hopwhistle:hopwhistle_dev@localhost:5432/hopwhistle

# ============================================================================
# Redis (for job queue/pub-sub)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# ClickHouse (Analytics Database - Optional)
# ============================================================================
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=hopwhistle_analytics

# ============================================================================
# Observability
# ============================================================================
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ENABLE_TRACING=true
LOG_LEVEL=info

# ============================================================================
# Stripe (for payments - Optional)
# ============================================================================
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_...

# ============================================================================
# Dialer Worker (The Hopper)
# ============================================================================
FREESWITCH_HOST=localhost
FREESWITCH_ESL_PORT=8021
FREESWITCH_ESL_PASSWORD=ClueCon
MAX_CONCURRENT_CALLS=10
DIALER_POLL_INTERVAL_MS=1000
DIALER_BATCH_SIZE=50
OUTBOUND_CALLER_ID=+15551234567
SOCKET_LISTENER_HOST=127.0.0.1
SOCKET_LISTENER_PORT=8021

# ============================================================================
# Wholesale SIP Trunking (Telnyx, Alcazar, etc.)
# ============================================================================
OUTBOUND_SIP_PROXY=sip.telnyx.com
OUTBOUND_SIP_USER=your_sip_username
OUTBOUND_SIP_PASS=your_sip_password

