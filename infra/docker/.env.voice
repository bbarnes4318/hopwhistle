# ============================================================================
# Voice Stack - Environment Variables
# ============================================================================
# Copy this file to infra/docker/.env.voice and customize for your environment
# Usage: docker compose --env-file infra/docker/.env.voice -f infra/docker/docker-compose.voice.yml up -d

# ============================================================================
# Public + Private IPs
# ============================================================================
PUBLIC_IP=167.71.173.83
PRIVATE_IP=10.108.0.2

# ============================================================================
# Domain names
# ============================================================================
SBC_DOMAIN=sbc.yourdomain.com
MEDIA_DOMAIN=media.yourdomain.com

# ============================================================================
# RTP ranges (open these in firewalls)
# ============================================================================
RTP_START=10000
RTP_END=20000

# ============================================================================
# SignalWire SIP trunk
# ============================================================================
# Use the SIP credentials you created for trunking in SignalWire Console
SIGNALWIRE_SIP_DOMAIN=YOURSPACE.sip.signalwire.com
SIGNALWIRE_SIP_REGION=us-east
SIGNALWIRE_SIP_USERNAME=sw_sip_user
SIGNALWIRE_SIP_PASSWORD=sw_sip_pass
SIGNALWIRE_OUTBOUND_PROXY=sip.${SIGNALWIRE_SIP_REGION}.${SIGNALWIRE_SIP_DOMAIN}

# ============================================================================
# TLS
# ============================================================================
TLS_ENABLE=true
TLS_CERT_FILE=/etc/kamailio/tls/server.crt
TLS_KEY_FILE=/etc/kamailio/tls/server.key

# ============================================================================
# Recording + webhook to your API
# ============================================================================
RECORDINGS_PATH=/var/recordings
API_BASE_URL=https://api.yourdomain.com
API_ADMIN_TOKEN=YOUR_API_TOKEN

# ============================================================================
# FreeSWITCH Event Socket
# ============================================================================
FS_ESL_PASSWORD=ClueCon

